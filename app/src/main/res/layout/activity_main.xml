<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#393838"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#1C1C1C">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/foto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="BIODATA KU"
                        android:textAlignment="center"
                        android:textColor="#E3E3E3"
                        android:textSize="25dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/foto_saya" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="15dp"
                        android:text="Mahasiswa Fakultas Ilmu Komputer Program Studi Teknik Informatika Universitas Dian Nuswantoro"
                        android:textAlignment="center"
                        android:textColor="#E3E3E3"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_nim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/foto"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="NIM"
                    android:textColor="#E3E3E3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nim"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Nama"
                    android:textColor="#E3E3E3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_hobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nama"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Hobi"
                    android:textColor="#E3E3E3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_valNIM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/foto"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/tv_nama"
                    android:text=":  A11.2020.12866"
                    android:textColor="#E3E3E3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_valNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_valNIM"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/tv_nama"
                    android:text=":  RENO ANDIES"
                    android:textColor="#E3E3E3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_valhobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_valNama"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/tv_nama"
                    android:text=":  Olahraga, Game, Membaca"
                    android:textColor="#E3E3E3"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_hobi"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#3C3C3C"
                    android:text="Alamat"
                    android:textColor="#C3C3C3"
                    android:onClick="alamat"/>

                <Button
                    android:id="@+id/btn_noTelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_alamat"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#3C3C3C"
                    android:text="NO telepon"
                    android:textColor="#C3C3C3"
                    android:onClick="telepon"/>

                <Button
                    android:id="@+id/btn_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_noTelp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#3C3C3C"
                    android:text="email"
                    android:textColor="#C3C3C3"
                    android:onClick="email"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>